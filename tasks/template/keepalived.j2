# Settings for notifications
global_defs {
 script_user root
 enable_script_security
 notification_email {
 naebzadeh.milad@gmail.com # Email address for notifications
 }
 notification_email_from naebzadeh.milad@gmail.com 
notifications
 smtp_server 127.0.0.1 # You can specifiy your own smtp server here
 smtp_connect_timeout 15
}

# Define the script used to check if haproxy is still working
vrrp_script chk_haproxy {
 script "/usr/bin/killall -0 haproxy"
 interval 2
 weight 2
}
 
# Configuation for the virtual interface
vrrp_instance VI_1 {
 interface {{ INTERFACE }}
{% if ansible_hostname == FRIST_NODENAME_ELASTIC %}   state MASTER {% else %} state BACKUP {% endif %}

{% if ansible_hostname == FRIST_NODENAME_ELASTIC %}    priority 150    {% else %} priority 140 {% endif %}
 
 virtual_router_id 55

 smtp_alert # Activate email notifications

 authentication {
 auth_type AH
 auth_pass password # Set this to some secret phrase
 }

 # The virtual ip address shared between the two loadbalancers
 virtual_ipaddress {
{{ FLOATIP }} 
 }

 # Use the script above to check if we should fail over
 track_script {
 chk_haproxy
 }
}
